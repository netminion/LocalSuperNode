#!/bin/sh

set -e

# link files and dirs from etc to persistent

mkdir /mnt/persistent

mv    /etc/hostname /mnt/persistent/hostname
ln -s /etc/hostname /mnt/persistent/hostname

mv -R /etc/systemd /mnt/persistent/systemd
ln -s /etc/systemd /mnt/persistent/systemd

mv -R /etc/ferm /mnt/persistent/ferm
ln -s /etc/ferm /mnt/persistent/ferm

mv -R /etc/dnsmasq.d /mnt/dnsmasq.d
ln -s /etc/dnsmasq.d /mnt/dnsmasq.d
